<h1>ピース集めの旅 ホーム</h1>
<% @users.each do |user| %>
  <div>
    <%= link_to piece_path(user) do %>
      <% if user.profile_image? %>
        <img src="<%= user.profile_image.url %>" height=150 width=150 alt="<%= user.name %>'s profile image" />
      <% else %>
        <img src="/assets/default.png" height=150 width=150 alt="<%= user.name %>'s profile image" />
      <% end %>
      <div><%= user.name %></div>
    <% end %>
  </div>
<% end %>

<div data-controller="map" data-map-pieces="<%= @pieces.to_json %>">
  <canvas data-map-target="canvas" id="canvas" width="1000" height="2000"></canvas>
</div>

<% console %>