
<h1>編集</h1>


<%= form_with model: @user, local: true do |f| %>
    <div class="form-group">
    <label for="user_avatar">アイコン画像</label>
    <%= f.file_field :profile_image, class: 'form-control', id: 'user_avatar' %>
    </div>
    <div class="form-group">
    <label for="user_name">名前</label>
    <%= f.text_field :name, class: 'form-control' ,id: 'user_name' %>
    </div>
    <div class="form-group">
    <label for="user_schoolgrade">学年</label>
    <%= f.text_field :academic_year, class: 'form-control', id: 'user_schoolgrade' %>
    </div>
    <div class="form-group">
    <label for="user_faculty">学部</label>
    <%= f.text_field :department, class: 'form-control', id: 'user_faculty' %>
    </div>
    <div class="form-group">
    <label for="user_root">出身</label>
    <%= f.text_field :hometown, class: 'form-control', id: 'user_root' %>
    </div>
    <div class="form-group">
    <label for="user_description">自己紹介</label>
    <%= f.text_area :profile, class: 'form-control', id: 'user_description' %>
    </div>

    <%= f.submit "登録する", class: "btn btn-primary" %>
<% end %>
    


