<% if current_user.id == @user.id %>
  <h3>プロフィール編集</h3>
  <%= form_for @user do |f| %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :profile_image %><br>
      <%= f.file_field :profile_image %>
    </div>

    <div class="field">
      <%= f.label :age %><br>
      <%= f.number_field :age %>
    </div>

    <div class="field">
      <%= f.label :academic_year %><br>
      <%= f.text_field :academic_year %>
    </div>

    <div class="field">
      <%= f.label :department %><br>
      <%= f.text_field :department %>
    </div>

    <div class="field">
      <%= f.label :hometown %><br>
      <%= f.text_field :hometown %>
    </div>

    <div class="field">
      <%= f.label :profile %><br>
      <%= f.text_area :profile %>
    </div>

    <div class="field">
      <%= f.label :match_distance %><br>
      <%= f.number_field :match_distance, in: 1..100 %>
    </div>

    <div class="actions">
      <%= f.submit "更新" %>
    </div>
  <% end %>

  <%= link_to '戻る', @user %>

<% else %>
  <h1>あなたのアカウントではありません</h1>
<% end %>
